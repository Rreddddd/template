<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.MemberTokenDao">

    <resultMap id="MemberToken" type="MemberToken">
        <id column="id" property="id" javaType="int"/>
        <result column="username" property="username"/>
        <result column="token" property="token"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="last_used_time" property="lastUsedTime" jdbcType="TIMESTAMP"/>
        <result column="valid" property="valid"/>
    </resultMap>

    <select id="getToken" resultType="MemberToken">
        select mt.id,
               mt.username,
               mt.token,
               mt.create_time,
               mt.last_used_time,
               mt.valid
        from member_token mt
        where mt.token = #{token}
    </select>

    <delete id="removeToken" parameterType="String">
        delete
        from member_token
        where username = #{username}
    </delete>
</mapper>